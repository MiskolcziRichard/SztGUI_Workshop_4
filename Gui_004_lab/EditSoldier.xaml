<Window x:Class="Gui_004_lab.EditSoldier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui_004_lab"
        mc:Ignorable="d"
        Title="EditSoldier" Height="450" Width="800">
    <Grid>
        <ListBox>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="Power" />
                        <TextBox Text="{Binding Power}"></TextBox>

                        <Label Content="Vitality" />
                        <TextBox Text="{Binding Vitality}"></TextBox>

                        <Label Content="Value" />
                        <TextBox Text="{Binding Value}"></TextBox>

                        <Button Content="Save" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
